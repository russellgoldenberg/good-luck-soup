body
	background $white
	font-family $serif
	font-size 16px
	line-height 1.4
	color $black
	
	&.show-header
		margin-top $header-height
	
	@media screen and (max-width: $breakpoint-medium)
		font-size 14px

p
	margin 0.5em 0
	padding 0.5em 1em
	font-weight 300
	word-spacing 0.05em


h1,h2,h3,h4
	font-weight 800

h1
	font-weight 700
	font-size 2.4em


h2
	font-weight 700
	font-size 2em
a
	color darken($primary, 15%)
	&.btn
		text-decoration none

img
	width 100%


.main-container
	margin-top $header-height


.hide
	display none


.hide-mobile
	@media screen and (max-width: $breakpoint-small)
		display none

.opaque
	opacity 1


.transparent
	opacity 0


.bold
	font-weight 700


.center-text
	text-align center


.vertical-align
	{vertical-align}


.bottom-align
	{bottom-align}

.btn
	background-color $primary
	border none
	font-size 1em
	color darken($primary, 50%)
	padding 0.5em 1em
	text-transform uppercase
	letter-spacing 0.1em
	display inline-block
	cursor pointer
	border-radius 3px
	font-family $sans
	-webkit-touch-callout none
    -webkit-user-select none
    -moz-user-select none
    user-select none
	transition-property background-color, opacity
	transition-duration $transition-fast
	transition-timing-function ease-in
	&:hover
		background-color darken($primary, 10%)

.fullscreen, .fullscreen-peek, .fullscreen-jumbo, .fullscreen-min
	position relative
	overflow hidden

.divider
	width 10em
	margin 1em auto
	height 1px
	background $gray-lightest


.bg-cover
	{bg-cover}


.logo-lady
	position absolute
	width 100%
	text-align center
	opacity 0
	transition-property opacity
	transition-duration $transition-fast
	transition-timing-function ease-in
	img
		padding 0.5em
		height 100px
		width auto
		opacity 0.6

.italic
	font-style italic


.overlay-pattern
	width 100%
	height 100%
	position absolute
	background-image url($filepath + '/img/pattern.png')

.header
	backface-visibility hidden
	background $black
	color $primary
	height $header-height
	padding 0 0.5em

	position fixed
	top 0
	left 0
	z-index 9999
	width 100%

	.logo
		float left
		width 40%
		line-height $header-height
		font-family $sans-alt
		font-weight 400
		text-transform uppercase
		a
			text-decoration none
		

.nav-right
	float left
	width auto
	width 60%
	line-height $header-height


a.nav-item
	opacity 0.8
	text-transform uppercase
	letter-spacing 0.1em
	font-size 0.8em
	font-family $sans
	display inline-block
	float right
	margin-left 1.5em
	text-decoration none
	&hove
		opacity 1
	
