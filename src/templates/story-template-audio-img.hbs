<div class='template-text-img'>
	<p class='story-content-user'>By <span class='user-name'>{{user}}</span> <span class='user-divider'>&bull;</span> <span class='user-date'>{{date}}</span></p>
	<h2 class='story-content-hed'><span>{{hed}}</span></h2>
	<div class='story-content-img-outer'>
		<div class='story-content-img-inner'>
			<img class='main-img' src='assets/img/story/{{img}}'>
			<div class='story-content-audio'>
				<div class='audio-player'>
					<div class='audio-player-progress'></div>
					<div class='audio-player-btn btn' data-src='{{audio}}'>
						<span class='icon-play'><img src='assets/img/icons/play.svg'></span>
						<span class='icon-pause hide'><img src='assets/img/icons/pause.svg'></span>
					</div>
					{{!-- <div class='audio-player-text'>
						Listen
					</div> --}}
				</div>
			</div>
		</div>
	</div>
</div>