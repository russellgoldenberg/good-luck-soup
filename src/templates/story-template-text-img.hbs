<div class='template-text-img'>
	<h2 class='story-content-hed'><span>{{hed}}</span></h2>
	<p class='story-content-user'>By <span class='user-name'>{{name}}</span> <span class='user-divider'>&bull;</span> <span class='user-date'>{{date}}</span></p>
	{{#if image}}
	<div class='story-content-img-outer'>
		<div class='story-content-img-inner' data-width='{{image_width}}' data-height='{{image_height}}'>
			<figure>
				<img class='main-img' src='http://goodlucksoup.com/uploaded-images/{{image}}'>
				{{#if image_caption}}
				<figcaption class='story-content-img-caption'>{{image_caption}}</figcaption>
				{{/if}}
			</figure>
		</div>
	</div>
	{{/if}}
	<div class='story-content-text'>{{{content}}}</div>
</div>